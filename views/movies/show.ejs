
<%include ../partials/header.ejs%>
<h1>Show Page</h1>

<h2>Movie Title: <%= title %></h2>

<img src="<%=poster%>">

<h3>Released: <%= year %></h3>
<h3>Genre: <%= genre %></h3>
<h3>Plot: <%= plot %></h3>

<form action="/movies/<%=imdbID%>/create" method="GET">
  <button>Write a Review!</button>
</form>

<% for (let i = 0; i < reviews.length; i++) { %>
    <h6><%=reviews[i].userId.name%></h6>
    <p><%= reviews[i].content %></p>
    <small><%= reviews[i].timestamp.toLocaleString() %></small><br/>
<% } %>

<%include ../partials/footer.ejs%>