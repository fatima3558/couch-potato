
<%include ../partials/header.ejs%>
<h1><%= title %></h1>
<h2>Average Potato Rating: <%=avg%></h2>

<div class="movie-show">
	<img src="<%=poster%>">
	<div class="text-left">
		<h5>Released: <%= year %></h5>
		<h5>Genre: <%= genre %></h5>
		<h5>Plot: <%= plot %></h5>
		<form action="/movies/<%=imdbID%>/create" method="GET">
		  <button class="btn btn-success" value="submit">Write a Review!</button>
		</form>

		<% reviews.forEach(review => { %>
			<h6>
				<img class="avatar" src="https://fasab.files.wordpress.com/2013/03/potato-pete.jpg">
				<%=review.userId.name%> said:
			</h6>
		    <p><%= review.content %></p>
		    <div class="total-rating">
			    <% for(let i = 0; i < review.rating; i++) {%>
	  				<img src="http://pngimg.com/uploads/potato/potato_PNG7078.png" id="rating">
	  			<% } %>
		    </div>
		    <small><%= review.timestamp.toLocaleString() %></small><br/>
		<% }) %>

	</div>
</div>

<%include ../partials/footer.ejs%>